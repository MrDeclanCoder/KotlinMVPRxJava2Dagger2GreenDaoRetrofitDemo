<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_gank"
                android:layout_width="70dp"
                style="@style/MaterialAnimations"
                android:layout_margin="10dp"
                android:src="@drawable/guide4"
                android:transitionName="@string/transitionName"
                android:layout_height="70dp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv_item_gank"
                android:id="@+id/tv_item_title_gank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_text" />
            <TextView
                android:id="@+id/tv_item_content_gank"
                android:layout_below="@id/tv_item_title_gank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/iv_item_gank"
                android:text="我是内容内容" />

            <TextView
                android:id="@+id/tv_item_time_gank"
                android:layout_width="wrap_content"
                android:text="2017-7-7"
                android:layout_margin="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>